#!/usr/bin/env ruby

# adapted from http://labs.headlondon.com/2010/07/skinny-daemons/
# 
# Skinny daemon command line interface script.
# Run <tt>remindrd -h</tt> to get more usage.

require File.dirname(__FILE__) + '/../lib/remindrd'
require 'thin'
 
rackup_file = "#{File.dirname(__FILE__)}/../lib/remindrd/config.ru"
 
argv = ARGV
argv << ["-R", rackup_file] unless ARGV.include?("-R")
argv << ["-p", "2003"] unless ARGV.include?("-p")
argv << ["-e", "production"] unless ARGV.include?("-e")
Thin::Runner.new(argv.flatten).run!